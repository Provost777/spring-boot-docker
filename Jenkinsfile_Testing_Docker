pipeline {
  
    agent any
       
      stages {
      
        stage('Build') {
            agent { 
                docker {
                        image 'maven:3.8.1-adoptopenjdk-11'
                        label 'maven'
                        args  '-v /tmp:/tmp'
                    }
          }
          steps {
            sh 'mvn --version'
            sh 'mvn clean install'
          }
        }
        
        
    }
}
